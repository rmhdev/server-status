{% extends 'base.html.twig' %}


{% block section 'login' %}


{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

            <form action="{{ path('login_check') }}" method="post" class="my-form-login">
                {#
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                #}
                <fieldset>
                    <legend>{{ 'login.legend'|trans({ '%app.name%': custom_app_name|title }) }}</legend>

                    <p class="text-muted d-none">{{ 'login.how.to'|trans }}</p>

                    <div class="form-group">
                        <label for="username">{{ 'login.username'|trans }}</label>
                        <input type="text" class="form-control input-lg" id="username" name="_username" placeholder="user@example.com" required="required" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'login.password'|trans }}</label>
                        <input type="password" class="form-control input-lg" id="password" name="_password"  required="required" placeholder="">
                    </div>

                    <div class="my-form-actions">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'login.submit'|trans }}</button>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}
